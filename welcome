        // --- ì²´í¬ë¦¬ìŠ¤íŠ¸ ë Œë”ë§ ë° ë¡œì§ ---
        const checkContainer = document.getElementById('checklist-container');
        const checkedState = {};

        function renderChecklist() {
            checkContainer.innerHTML = checklistData.map(item => {
                const isChecked = checkedState[item.id];
                const bgClass = isChecked ? 'bg-green-50 border-green-200 text-gray-400' : 'bg-white border-gray-200 text-gray-700 hover:border-orange-300';
                const iconBg = isChecked ? 'bg-green-500 border-green-500' : 'bg-white border-gray-300';
                const checkIcon = isChecked ? `<i data-lucide="check" class="text-white w-3 h-3"></i>` : '';
                const textStyle = isChecked ? 'line-through decoration-gray-300' : '';
                const warning = (item.highlight && !isChecked) ? '<span class="block text-[10px] text-red-500 font-medium mt-0.5">âš ï¸ í™•ì¸ í•„ìš”</span>' : '';

                return `
                    <div onclick="toggleCheck(${item.id})" class="flex items-center p-3 rounded-lg border transition-all cursor-pointer select-none ${bgClass}">
                        <div class="w-5 h-5 rounded-full border mr-3 flex items-center justify-center flex-shrink-0 transition-colors ${iconBg}">
                            ${checkIcon}
                        </div>
                        <div class="flex-1">
                            <span class="text-sm ${textStyle}">${item.text}</span>
                            ${warning}
                        </div>
                    </div>
                `;
            }).join('');
            lucide.createIcons(); // ì•„ì´ì½˜ ë‹¤ì‹œ ê·¸ë¦¬ê¸°
        }

        function toggleCheck(id) {
            checkedState[id] = !checkedState[id];
            renderChecklist();
        }

        // --- FAQ ë Œë”ë§ ë° ë¡œì§ ---
        const faqContainer = document.getElementById('faq-container');
        let openFaqId = null;

        function renderFaq() {
            faqContainer.innerHTML = faqData.map(item => {
                const isOpen = openFaqId === item.id;
                const chevron = isOpen ? 'chevron-up' : 'chevron-down';
                const content = isOpen ? `
                    <div class="p-4 pt-0 bg-gray-50 text-sm text-gray-600 border-t border-gray-100 leading-relaxed">
                        <div class="mt-3 font-medium whitespace-pre-wrap">${item.a}</div>
                    </div>
                ` : '';

                return `
                    <div class="border border-gray-200 rounded-xl bg-white overflow-hidden shadow-sm">
                        <button onclick="toggleFaq(${item.id})" class="w-full flex justify-between items-start p-4 text-left bg-white hover:bg-gray-50 transition-colors">
                            <div class="flex items-start pr-4">
                                <span class="mt-0.5 mr-2 flex-shrink-0 ${item.color}"><i data-lucide="${item.icon}" class="w-4 h-4"></i></span>
                                <span class="font-bold text-sm text-gray-800 leading-snug">${item.q}</span>
                            </div>
                            <i data-lucide="${chevron}" class="text-gray-400 w-4 h-4 flex-shrink-0"></i>
                        </button>
                        ${content}
                    </div>
                `;
            }).join('');
            lucide.createIcons();
        }

        function toggleFaq(id) {
            openFaqId = (openFaqId === id) ? null : id;
            renderFaq();
        }

        // --- ì´ˆê¸° ì‹¤í–‰ ---
        renderChecklist();
        renderFaq();
        lucide.createIcons(); // ì´ˆê¸° ì•„ì´ì½˜ ë¡œë“œ
    </script>
